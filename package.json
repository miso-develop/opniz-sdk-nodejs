{
	"name": "opniz",
	"version": "0.1.0",
	"description": "opniz sdk for node.js",
	"keywords": [
		"opniz",
		"obniz",
		"m5stack",
		"m5atom",
		"esp32"
	],
	"license": "MIT",
	"homepage": "https://github.com/miso-develop/opniz",
	"repository": {
		"type": "git",
		"url": "https://github.com/miso-develop/opniz-sdk-nodejs.git"
	},
	"bugs": "https://github.com/miso-develop/opniz-sdk-nodejs/issues",
	"author": "Miso Tanaka <miso.develop@gmail.com>",
	"main": "dist/index.js",
	"engines": {
		"node": ">=12.x"
	},
	"files": [
		"dist"
	],
	"private": false,
	"scripts": {
		"prepare": "npm run build && npx husky install",
		"nodemon": "nodemon --watch dist dist/index.js",
		"m": "npm run nodemon",
		"node": "node dist",
		"n": "npm run node",
		"develop": "nodemon dist/main.js",
		"d": "npm run develop",
		"prestart": "npm run build",
		"start": "npm run node",
		"clean": "npx rimraf dist",
		"c": "npm run clean",
		"prebuild": "npm run clean",
		"build": "npx tsc",
		"b": "npm run build",
		"prewatch": "npm run clean",
		"watch": "npx tsc -w",
		"w": "npm run watch",
		"lint": "npx eslint {src,tests,examples}/**/*.{ts,js}",
		"l": "npm run lint",
		"lint:fix": "npx eslint --fix {src,tests,examples}/**/*.{ts,js}",
		"l:f": "npm run lint:fix",
		"_test": "echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && echo . && npx jest",
		"_t": "npm _test",
		"test": "npx jest",
		"t": "npm test",
		"test:coverage": "npx jest --coverage",
		"t:c": "npm run test:coverage",
		"test:watch": "npx jest --watch",
		"t:w": "npm run test:watch",
		"predoc": "npx rimraf docs",
		"doc": "npx typedoc src --out docs --readme none --exclude \"./src/**/example.ts\" --gitRevision main --disableOutputCheck ",
		"open:coverage": "npx opener chrome ./coverage/lcov-report/index.html",
		"o:c": "npm run open:coverage",
		"open:doc": "npx opener chrome ./docs/index.html",
		"o:d": "npm run open:doc",
		"update": "npm ci && npm run lint && npm run build && npm run test:coverage && npm run doc",
		"u": "npm run update",
		"": ""
	},
	"lint-staged": {
		"{src,tests,examples}/**/*.{ts,js}": [
			"eslint --fix",
			"git add"
		]
	},
	"dependencies": {
		"abortcontroller-polyfill": "^1.7.3",
		"chalk": "^4.1.0",
		"dayjs": "^1.10.3",
		"socket.io": "^4.3.1",
		"socket.io-client": "^4.3.2",
		"source-map-support": "^0.5.20"
	},
	"devDependencies": {
		"@types/eslint": "^4.16.6",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.20",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"esbuild": "^0.12.25",
		"esbuild-jest": "^0.4.0",
		"eslint": "^7.32.0",
		"eslint-plugin-jest": "^24.1.3",
		"get-port": "^5.1.1",
		"husky": "^5.1.3",
		"ip": "^1.1.5",
		"jest": "^27.3.1",
		"lint-staged": "^10.5.4",
		"opener": "^1.5.2",
		"ts-jest": "^27.0.7",
		"typedoc": "^0.20.31",
		"typescript": "^4.2.3"
	}
}
